                               FontSize="{DynamicResource TextSmallSize}"
                               Text="开始位置(mm):" />
                    <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="10,0,10,0" 
